generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id               String        @id @default(cuid())
  username         String?       @unique
  password         String        @default("password")
  role             String        @default("STUDENT")
  frozen           Boolean       @default(false)
  playerRole       String        @default("UNSET")   // UNSET, CEO, HEDGE_FUND, RETAIL
  onboarded        Boolean       @default(false)
  managedAssetId   String?                            // CEO only: which company they manage
  hedgeFundBalance Float         @default(0.0)        // HFM only: fund capital (starts 10M)
  deltaBalance     Float         @default(100000.0)
  marginLimit      Float         @default(0.0)
  marginLoan       Float         @default(0.0)
  lendingLimit     Float         @default(0.0)
  lendingRate      Float         @default(0.0)
  portfolios         Portfolio[]
  transactions       Transaction[]
  userGoals          UserGoal[]
  bids               GoalAuction[]
  loansGiven         Loan[]            @relation("Lender")
  loansTaken         Loan[]            @relation("Borrower")
  limitOrders        LimitOrder[]
  ceoScenarios       CeoScenario[]
  consumerPurchases  ConsumerPurchase[]
}

model Asset {
  id           String         @id @default(cuid())
  symbol       String         @unique
  name         String
  type         String
  sector       String
  niche        String
  description  String
  supplyPool   Float
  demandPool   Float
  basePrice    Float
  portfolios         Portfolio[]
  transactions       Transaction[]
  priceHistory       PriceHistory[]
  limitOrders        LimitOrder[]
  ceoScenarios       CeoScenario[]
  producedGoods      Good[]             @relation("ProducedGoods")
  inputRequirements  InputRequirement[] @relation("InputRequirements")
  buyerContracts     SupplyContract[]   @relation("BuyerContracts")
  sellerContracts    SupplyContract[]   @relation("SellerContracts")
  goodInventories    GoodInventory[]
}

model CeoScenario {
  id            String    @id @default(cuid())
  userId        String
  assetId       String
  question      String
  choiceA       String
  choiceB       String
  choiceC       String
  chosenOption  String?                          // null = unanswered, "A"/"B"/"C"
  answeredAt    DateTime?
  newsPublished Boolean   @default(false)
  createdAt     DateTime  @default(now())
  user          User      @relation(fields: [userId], references: [id])
  asset         Asset     @relation(fields: [assetId], references: [id])
}

model Portfolio {
  id                String  @id @default(cuid())
  userId            String
  assetId           String
  quantity          Float
  averageEntryPrice Float
  isShortPosition   Boolean @default(false)
  takeProfitPrice   Float? // Optional auto-closure target
  stopLossPrice     Float? // Optional auto-closure defense
  user              User    @relation(fields: [userId], references: [id])
  asset             Asset   @relation(fields: [assetId], references: [id])

  @@unique([userId, assetId, isShortPosition])
}

model Transaction {
  id        String   @id @default(cuid())
  userId    String
  assetId   String
  type      String
  amount    Float // Quantity traded
  price     Float // Execution price per unit
  fee       Float // 0.5% fee
  timestamp DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id])
  asset     Asset    @relation(fields: [assetId], references: [id])
}

// Enums removed for SQLite compatibility

model NewsStory {
  id                  String   @id @default(cuid())
  headline            String
  context             String
  targetSector        String
  targetSpecialty     String
  impactScope         String
  direction           String
  intensityWeight     Int
  competitorInversion Boolean
  publishedAt         DateTime @default(now())
}

model PriceHistory {
  id        String   @id @default(cuid())
  assetId   String
  open      Float
  high      Float
  low       Float
  close     Float
  timestamp DateTime @default(now())
  asset     Asset    @relation(fields: [assetId], references: [id])

  @@index([assetId, timestamp])
}

model GoalCard {
  id             String        @id @default(cuid())
  title          String
  description    String
  criteriaType   String        // e.g. "HOLD_ASSET_QUANTITY", "TOTAL_EQUITY"
  criteriaTarget String        // e.g. assetId or "ANY"
  criteriaAmount Float
  victoryPoints  Int
  auctions       GoalAuction[]
  userGoals      UserGoal[]
}

model GoalAuction {
  id              String   @id @default(cuid())
  goalCardId      String
  startTime       DateTime @default(now())
  endTime         DateTime
  minBid          Float
  highestBid      Float    @default(0.0)
  highestBidderId String?
  isActive        Boolean  @default(true)
  goalCard        GoalCard @relation(fields: [goalCardId], references: [id])
  highestBidder   User?    @relation(fields: [highestBidderId], references: [id])
}

model UserGoal {
  id         String   @id @default(cuid())
  userId     String
  goalCardId String
  acquiredAt DateTime @default(now())
  costPaid   Float
  user       User     @relation(fields: [userId], references: [id])
  goalCard   GoalCard @relation(fields: [goalCardId], references: [id])
}

model Loan {
  id           String   @id @default(cuid())
  lenderId     String
  borrowerId   String
  principal    Float
  interestRate Float
  amountOwed   Float
  status       String   @default("ACTIVE") // "ACTIVE" or "REPAID"
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  lender       User     @relation("Lender", fields: [lenderId], references: [id])
  borrower     User     @relation("Borrower", fields: [borrowerId], references: [id])
}

model LimitOrder {
  id        String   @id @default(cuid())
  userId    String
  assetId   String
  type      String   // "BUY" or "SELL" or "SHORT" or "COVER"
  quantity  Float
  price     Float    // The target execution price
  leverage  Float    @default(1.0)
  status    String   @default("PENDING") // PENDING, EXECUTED, CANCELLED
  createdAt DateTime @default(now())

  user      User     @relation(fields: [userId], references: [id])
  asset     Asset    @relation(fields: [assetId], references: [id])
}

model InviteCode {
  code      String   @id           // 8-digit alphanumeric code
  used      Boolean  @default(false)
  usedById  String?                // userId who redeemed it
  createdAt DateTime @default(now())
  usedAt    DateTime?
}

model SectorIndex {
  id        String   @id @default(cuid())
  sector    String
  indexPrice Float                   // Average basePrice of all assets in this sector
  timestamp  DateTime @default(now())

  @@index([sector, timestamp])
}



model GlobalSetting {
  id    String @id @default(cuid())
  key   String @unique
  value String
}

// ===== PHASE 1: PRODUCTION ECONOMY =====

// A physical or digital good that a company produces and sells
model Good {
  id                  String              @id @default(cuid())
  name                String
  unit                String              // e.g. "barrel", "chip", "kWh", "tonne"
  producerId          String              // The Asset (company) that produces this good
  currentStockLevel   Float               @default(0.0)
  baseProductionCost  Float               // Delta cost to produce one unit
  listPrice           Float               // Price at which the producer sells it
  isListedForSale     Boolean             @default(false)
  createdAt           DateTime            @default(now())

  producer            Asset               @relation("ProducedGoods", fields: [producerId], references: [id])
  inputRequirements   InputRequirement[]  @relation("InputGood")
  inventories         GoodInventory[]
  contracts           SupplyContract[]
  consumerPurchases   ConsumerPurchase[]
}

// Declares that a company needs certain goods as inputs to run a production cycle
model InputRequirement {
  id                    String   @id @default(cuid())
  consumerId            String   // The Asset (company) that needs this input
  inputGoodId           String   // The Good they need
  unitsPerCycle         Float    // How many units needed per production cycle

  consumer              Asset    @relation("InputRequirements", fields: [consumerId], references: [id])
  inputGood             Good     @relation("InputGood", fields: [inputGoodId], references: [id])
}

// A bilateral, recurring supply agreement between two companies
model SupplyContract {
  id            String   @id @default(cuid())
  buyerId       String   // The company purchasing the good
  sellerId      String   // The company selling the good
  goodId        String   
  pricePerUnit  Float
  unitsPerCycle Float
  status        String   @default("ACTIVE")   // ACTIVE, BROKEN, PENDING, EXPIRED
  autoRenew     Boolean  @default(true)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  buyer         Asset    @relation("BuyerContracts", fields: [buyerId], references: [id])
  seller        Asset    @relation("SellerContracts", fields: [sellerId], references: [id])
  good          Good     @relation(fields: [goodId], references: [id])
}

// Tracks how much of any good a company currently has in stock
model GoodInventory {
  id        String   @id @default(cuid())
  assetId   String   // The company holding this inventory
  goodId    String   
  quantity  Float    @default(0.0)

  asset     Asset    @relation(fields: [assetId], references: [id])
  good      Good     @relation(fields: [goodId], references: [id])

  @@unique([assetId, goodId])
}

// A retail user purchasing a physical good from a company's marketplace listing
model ConsumerPurchase {
  id          String   @id @default(cuid())
  userId      String
  goodId      String
  quantity    Float
  pricePaid   Float
  purchasedAt DateTime @default(now())

  user        User     @relation(fields: [userId], references: [id])
  good        Good     @relation(fields: [goodId], references: [id])
}
